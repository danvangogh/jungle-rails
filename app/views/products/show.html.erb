<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
          <br/>
          <dt>Ratings</dt>
          <br/>
          <hr/>

          <div class="rating">
            <dt>Rating: <% @product.reviews.reverse_each do |review| %></dt>
            <dd><%= review.rating %><dd>
            <dt>Review</dt>
            <dd><%= review.description %></dd>

              <%= button_to "Delete my review", product_review_url(:product_id => review.product.id, :id => review.id), :method => :delete %>
              <% end %>
            <hr/>
          </div>
        <% if current_user %>
          <%= form_for [@product, @review] do |f| %>

            <div class="form-group">
              Description: <%= f.text_area :description %>
              Rating: <%= f.select :rating, ['1', '2', '3', '4', '5'] %>
              <%= f.submit "Submit" %>
              <% end %>
            <% end %>
          </div>
        </dl>
      </div>
    </div>

  </article>

</section>
