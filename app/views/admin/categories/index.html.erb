<section class="admin-products-new">

  <header class="page-header">
    <h1>Admin &raquo; Categories</h1>
  </header>

  <div class="well">
    <%= link_to 'Add Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">

      <div class="panel panel-default products">

        <table class="table table-bordered">

          <tbody>
            <%= render @categories %>
          </tbody>

        </table>

      </div>

    </div>
  </div>

</section>
